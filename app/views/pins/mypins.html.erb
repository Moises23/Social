<div class="container">
  <% if user_signed_in? %>
    <%= link_to 'Crear Pin', new_pin_path, :class =>"btn btn-success" %>
  <% end %>
  <h1>Mis Pins</h1>
    <% @pins.each do |pin| %> 
      <div class="row">
        <div class="col-md-3">
          <div class="thumbnail">
              <%= image_tag(pin.photo, :class =>"img-responsive") %>
                <div class="caption">
                    <h3><%= pin.name %></h3>
                    <p><%= pin.description %></p>
                    <%= link_to 'Mostrar', pin, :class =>"btn btn-warning" %>
                     <% if user_signed_in? %>
                    <%= link_to 'Editar', edit_pin_path(pin), :class =>"btn btn-warning" %>
                    <%= link_to 'Eliminar', pin, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-warning" %>
                    <% end %>
                </div>
            </div>
         </div>     
    <% end %>
    </div>
</div>