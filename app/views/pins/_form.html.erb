<%= form_for(@pin) do |f| %>
    <% if @pin.errors.any? %>
        <div class="alert alert-success" role="alert">
            <h2><%= pluralize(@pin.errors.count, "error") %> Campos vacios no se pudo guardar el Pin:</h2>
              <ul>
                <% @pin.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
              </ul>
        </div>
    <% end %>

    <div class="form-group">
      <div class="field">
        <%= f.label :photo,"Fotografía" %><br>
        <%= f.text_field :photo, :class => "form-control", :placeholder => "Ingrese url de la Imagen" %>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label :name,"Nombre" %><br>
        <%= f.text_field :name, :class => "form-control", :placeholder => "Ingrese nombre de la imagen" %>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label :description,"Descripcción" %><br>
        <%= f.text_area :description, :class => "form-control", :placeholder => "Ingrese Descripcción de la Imagen" %>
      </div>
    </div>
      <div class="actions">
        <%= f.submit "Crear Pin", :class =>"btn btn-success" %>
      </div>
<% end %>
